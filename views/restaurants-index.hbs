<h2>{{restaurants.length}} restaurants</h2>
<a href="/">Home</a>

{{#each restaurants as |restaurant index|}}
<h3>
  <a href="/restaurants/{{restaurant.name}}">{{restaurant.name}}</a>
</h3>
{{/each}}

<form action="/restaurants" method="post">
  <input type="text" name="restaurant[name]" placeholder="Name" /><br>
  <button type="submit">Add Restaurant</button>
</form>
